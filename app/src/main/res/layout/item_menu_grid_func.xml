<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center">

    <TextView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:layout_margin="3dp"
        android:layout_gravity="end"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/shape_oval_red"
        android:textColor="@color/white"
        android:text="-"/>

    <LinearLayout
        android:id="@+id/item_grid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_menu_item_grid_func"
        android:layout_margin="3dp"
        android:background="@drawable/selector_menu_item_touch"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pic"
            android:layout_width="@dimen/width_menu_image_grid_func"
            android:layout_height="@dimen/height_menu_image_grid_func"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="功能1功能1"
            android:textColor="@color/gray_text_desc"
            android:textSize="10sp"/>
    </LinearLayout>

</FrameLayout>
